# http://editorconfig.org
root = true

[*]
indent_style = tab
tab_width = 8
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space
tab_width = 4

[*.yml]
indent_style = space
tab_width = 2

[external/**]
trim_trailing_whitespace = false
